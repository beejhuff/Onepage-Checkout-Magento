/** @var Oggetto_OnepageCheckout_Block_Onepage_Review_Items $this */
?>

<thead>
    <tr>
        <th><?php echo $this->__('Product Name'); ?></th>
        <th><?php echo $this->__('Price'); ?></th>
        <th><?php echo $this->__('Qty'); ?></th>
        <th><?php echo $this->__('Subtotal') ?></th>
    </tr>
</thead>
<tbody>
    <?php foreach($this->getItems() as $item): ?>
        <?php /** @var Mage_Sales_Model_Quote_Item $_item */ ?>
        <tr>
            <td>
                <?php if ($this->shouldShowProductNameAsLink()): ?>
                    <a href="<?php echo $item->getProduct()->getProductUrl(); ?>"><?php echo $item->getName(); ?></a>
                <?php else: ?>
                    <?php echo $item->getName(); ?>
                <?php endif; ?>
            </td>
            <td><?php echo $this->helper('checkout')->formatPrice($price = $item->getPrice()); ?></td>
            <td><?php echo $qty = $item->getQty(); ?></td>
            <td><?php echo $this->helper('checkout')->formatPrice($price * $qty); ?></td>
        </tr>
    <?php endforeach ?>
</tbody>
