        <?php if ($this->shouldReloadOnOrderTotalChange()) echo "{'id' : 'grandTotal', 'block' : 'totals'}"; ?>
    ];

    paymentAjaxReloadOn = paymentAjaxReloadOn.filter(function (el) { return el; });
</script>
